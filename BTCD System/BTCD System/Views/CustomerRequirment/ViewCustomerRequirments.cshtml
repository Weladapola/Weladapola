@model IEnumerable<BTCD_System.Models.CustomerRequirment>
@using BTCD_System.Models
@{
    ViewBag.Title = "ViewCustomerRequirments";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>
        Customer Requirments
        <small>Optional description</small>
    </h1>
    <ol class="breadcrumb">
        <li>
            <a href="#"><i class="fa fa-dashboard"></i>Transaction</a>
        </li>
        <li class="active">Customer Requirments</li>
    </ol>
    <style>
        form {
            display: inline;
        }
    </style>
</section>


<!-- Main content -->
<section class="content">
    <!-- Your Page Content Here -->


    <div class="box box-default">
        <div class="box-body">
            <div class="row">
                <div class="col-lg-12 btn-container-right">
                    <div class="btn-group">
                        @using (Html.BeginForm("Index", "Home", FormMethod.Get))
                        {
                            <button type="submit" class="btn btn-warning"> Home  </button>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="box box-default">
        <div class="box-header with-border">
            <h3 class="box-title">Customer Requirments</h3>

            <div class="box-tools pull-right">
                <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i></button>
            </div>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="row">
                <div class="col-xs-12">

                    <!-- /.box-header -->
                    <div class="box-body">
                        <table id="MyStock" class="datatable display nowrap"  style="width:100%">
                            <thead>
                                <tr>
                                    <th style="display: none;">Request Code</th>
                                    <th>Item </th>
                                    <th>Item Name</th>
                                    <th>Customer</th>
                                    <th>Required Date</th>
                                    <th>Required Qty</th>
                                    <th>Required Price (Rs)</th>                               
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (CustomerRequirment customerRequirment in Model)
                                {
                                    <tr>
                                        <td style="display: none;" class="clsRequirementId"> @customerRequirment.RequirementId</td>                                        
                                        <td> @customerRequirment.ItemId</td>
                                        <td> @customerRequirment.ItemName</td>
                                        <td> @customerRequirment.CustomerName</td>
                                        <td> @customerRequirment.RequiredDate.ToString("yyyy-MM-dd")</td>
                                        <td> @customerRequirment.RequiredQty</td>
                                        <td> @customerRequirment.RequiredPrice</td>
                                       
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- /.box-body -->
                    <!-- /.box -->
                </div>
            </div>
        </div>
    </div>

</section>

<script>


    var table = $('#MyStock').DataTable({

        rowReorder: {
            selector: 'td:nth-child(2)'
        },
        responsive: true
    });
</script>