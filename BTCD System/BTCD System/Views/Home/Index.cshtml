    @{ int count = 0; bool IsRow = true; }

        @for (int i = 0; i < 4; i += 1)
        {
            count++;

            if (IsRow == true)
            {
                @:<div class="row">
            }

            if (count <= 4)
            {
                if (i == 0)
                {
                    IsRow = false;

                    Tile tile = new Tile();

                    tile.Controller = "Item";
                    tile.Action = "Category";
                    tile.Value = "1";
                    tile.Subject = "Selling / විකුනුම්";
                    tile.Image = "~/Images/Selling.jpeg";

                    Html.RenderPartial("~/Views/Shared/_Tile2.cshtml", tile);
                }
                else if (i == 1)
                {
                    IsRow = false;

                    Tile tile = new Tile();

                    tile.Controller = "Stock";
                    tile.Action = "ViewMyStock";
                    tile.Value = "1";
                    tile.Subject = "View My Stock / මාගේ විකිනීමට අති දෙ";
                    tile.Image = "~/Images/Pallet.png";

                    Html.RenderPartial("~/Views/Shared/_Tile2.cshtml", tile);
                }
                else if (i == 2)
                {
                    IsRow = false;

                    Tile tile = new Tile();

                    tile.Controller = "Stock";
                    tile.Action = "ViewStock";
                    tile.Value = "1";
                    tile.Subject = "To Buy / මිලදී ගැනීමට";
                    //tile.Body = "View Stock / මිලදී ගැනීමට";
                    tile.Image = "~/Images/cart.jpg";

                    Html.RenderPartial("~/Views/Shared/_Tile2.cshtml", tile);
                }
                else if (i == 3)
                {
                    IsRow = false;

                    Tile tile = new Tile();

                    tile.Controller = "CustomerRequirment";
                    tile.Action = "ViewCustomerRequirments";
                    tile.Value = "1";
                    tile.Subject = "View My Reqirment / මට මිලදී ගැනීමට උවමනා දෙ";

                    tile.Image = "~/Images/list.png";

                    Html.RenderPartial("~/Views/Shared/_Tile2.cshtml", tile);
                }

            }

            if (count == 4)
            {
                count = 0;
                IsRow = true;
                @:</div>
            }
        }
