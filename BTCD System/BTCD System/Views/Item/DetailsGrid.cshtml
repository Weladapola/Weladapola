<script>
    function AjaxPost(formData) {
        $('.loader').show();

        var ajaxConfig = {
            type: "post",
            url: "/Item/AddItem",
            data: new FormData(formData),
            success: function (result) {
                $('.loader').fadeOut();
                //location.reload();
            }
            
        }

        ajaxConfig["contentType"] = false;
        ajaxConfig["processData"] = false;

        $.ajax(ajaxConfig);
        //return false;
    }
</script>
