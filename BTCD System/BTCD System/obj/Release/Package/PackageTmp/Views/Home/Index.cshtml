<style>
    .card2 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%,-50%);
        width: 200px;
        min-height: 300px;
        background: #fff;
        box-shadow: 0 20px 50px rgba(0,0,0,.1);
        border-radius: 10px;
        transition: 0.5s;
        margin-top: 200px;
    }

        .card2:hover {
            box-shadow: 0 30px 70px rgba(0,0,0,.2);
        }

        .card2 .box {
            position: fixed;
            top: 50%;
            left: 0;
            transform: translateY(-50%);
            text-align: center;
            padding: 20px;
            box-sizing: border-box;
            width: 100%;
        }

            .card2 .box .img {
                width: 120px;
                height: 120px;
                margin: 0 auto;
                border-radius: 50%;
                overflow: hidden;
            }

                .card2 .box .img img {
                    width: 100%;
                    height: 100%;
                }

            .card2 .box h2 {
                font-size: 20px;
                color: #262626;
                margin: 20px auto;
            }

                .card2 .box h2 span {
                    font-size: 14px;
                    background: #e91e63;
                    color: #fff;
                    display: inline-block;
                    padding: 4px 10px;
                    border-radius: 15px;
                }

            .card2 .box p {
                color: #262626;
            }

            .card2 .box span {
                display: inline-flex;
            }

            .card2 .box ul {
                margin: 0;
                padding: 0;
            }

                .card2 .box ul li {
                    list-style: none;
                    float: left;
                }

                    .card2 .box ul li a {
                        display: block;
                        color: #aaa;
                        margin: 0 10px;
                        font-size: 20px;
                        transition: 0.5s;
                        text-align: center;
                    }

                    .card2 .box ul li:hover a {
                        color: #e91e63;
                        transform: rotateY(360deg);
                    }
</style>

